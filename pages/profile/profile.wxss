/* pages/profile/profile.wxss */
.container {
    position: relative;
    overflow: hidden;

    --td-navbar-bg-color: rgba(255, 255, 255, 0);
}

.poster {
    width: 100%;
    height: 50vh;
}

.container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 160rpx;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.8), rgba(255,255,255, 0))
}

.view {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
}

.content {
    width: 100%;
    min-height: 100%;
    box-sizing: border-box;
    padding-top: 24vh;
    display: flex;
    flex-direction: column;
}

.content-inner {
    flex: 1;
    width: 100%;
    min-height: 0;
    background-color: #fff;
    border-radius: 40rpx 40rpx 0 0;
}

.header {
    display: flex;
    align-items: center;
    padding: 0 48rpx;
    transform: translateY(-50%);
}

.header-main {
    margin-left: 34rpx;
}

.header-name {
    margin-bottom: 40rpx;
    font-size: 28rpx;
    line-height: 34rpx;
    color: #ffffff;
}

.header-slogan {
    font-size: 20rpx;
    line-height: 1.2;
    color: var(--td-text-color-secondary);
}

.body {
    padding: 0 20rpx;
}

.btn-logout {
    margin: 80rpx 32rpx 0;
}